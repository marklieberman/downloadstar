{

  "manifest_version": 2,
  "name": "Download Star",
  "version": "1.0.0",

  "description": "Download all items in a webpage that match a pattern",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "activeTab",
    "downloads"
  ],

  "browser_action": {
    "browser_style": false,
    "default_icon": {
      "19": "icons/popup-19.png",
      "38": "icons/popup-38.png"
    },
    "default_title": "Download Star",
    "default_popup": "popup/popup.html"
  }

}
